<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <us.xingkong.Dashboard.Dashboard
        android:id="@+id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arcGradientEnd="@color/arcGradientStart"
        app:arcGradientMiddle="@color/arcGradientEnd"
        app:arcGradientStart="@color/arcGradientStart"
        app:scaleGradientEnd="@color/arcGradientEnd"
        app:scaleGradientMiddle="@color/gradientStart"
        app:scaleGradientStart="@color/arcGradientEnd"
        app:targetScore="100" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="生成随机值"
        android:textSize="24sp" />

</RelativeLayout>